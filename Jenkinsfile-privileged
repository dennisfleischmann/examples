//Inspired by: https://github.com/jenkinsci/kubernetes-plugin/blob/master/README.md#container-group-support
podTemplate(yaml: """
apiVersion: v1
kind: Pod
metadata:
  annotations:
    seccomp.security.alpha.kubernetes.io/pod: runtime/default
spec:
  securityContext:
    runAsUser: 1000
    fsGroup: 1000
  containers:
  - image: ubuntu
    command:
      - "sleep"
      - "604800"
    imagePullPolicy: IfNotPresent
    name: ubuntu
    securitycontext:
      privileged: true
    restartPolicy: Always
""") {

     def str = "Hello world"

     println "$str"
     
     def sout = new StringBuilder(), serr = new StringBuilder()
     def proc = 'hostname'.execute()
     proc.consumeProcessOutput(sout, serr)
     proc.waitForOrKill(1000)
     println "out> $sout err> $serr"


    node(POD_LABEL) {
    
        sh 'echo "Hello World from abc129"'
        sh 'hostname'

        stage('Run long task') {
            git 'https://github.com/jenkins-docs/simple-java-maven-app.git'
            container('ubuntu') {
                stage('Run and run and run...') {
                      sh 'echo "Hello World"'
                }
            }
        }

         stage('Run long task 2') {
           sh 'echo "Hello World from abc126"'
           sh 'hostname'
           sh 'ls -la /'
           sh 'pwd'
           sh 'id'
        }

    }
}
